    "Coordinates": {
      "type": "object",
      "description": "Coordinates of a geographical location",
      "required": [
        "latitude",
        "longitude"
      ],
      "properties": {
        "latitude": {
          "description": "latitude coordinate of a geographical location expressed in decimal degress.",
          "type": "number",
          "format": "float",
          "minimum": -90,
          "maximum": 90,
          "multipleOf": 0.000001
        },
        "longitude": {
          "description": "longitude coordinate of a geographical location expressed in decimal degress.",
          "type": "number",
          "format": "float",
          "minimum": -180,
          "maximum": 180,
          "multipleOf": 0.000001
        }
      },
      "example": {
        "latitude": 40.419316,
        "longitude": -3.698839
      }
    },
    "StoreAvailability": {
