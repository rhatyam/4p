    "GenericAvailabilityDay": {
      "type": "object",
      "description": "Store open and close hours for regular days",
      "required": [
        "open",
        "close",
        "day_of_week"
      ],
      "properties": {
        "open": {
          "description": "Store open hour. Presentation String",
          "type": "string"
        },
        "close": {
          "description": "Store close hour. Presentation String",
          "type": "string"
        },
        "day_of_week": {
          "description": "Day of the week",
          "$ref": "#/definitions/DayOfWeek"
        }
      },
      "example": {
        "open": "09:00",
        "close": "21:30",
        "day_of_week": "MON"
      }
    },
    "SpecialAvailabilityDay": {
      "type": "object",
      "description": "Store open and close hours for special days",
      "required": [
        "open",
        "close",
        "date"
      ],
      "properties": {
        "open": {
          "description": "Store open hour. Presentation String",
          "type": "string"
        },
        "close": {
          "description": "Store close hour. Presentation String",
          "type": "string"
        },
        "date": {
          "description": "Special day date",
          "type": "string",
          "format": "date"
        }
      },
      "example": {
        "open": "09:00",
        "close": "20:30",
        "date": "2020-12-25"
      }
    },
    "DayOfWeek": {
      "type": "string",
      "description": "Day of the week",
      "enum": [
        "MON",
        "TUE",
        "WED",
        "THU",
        "FRI",
        "SAT",
        "SUN"
      ]
    },
    "PostalAddress": {
      "type": "object",
      "description": "Postal address of the store",
      "required": [
        "formatted"
      ],
      "properties": {
        "formatted": {
          "type": "string",
          "description": "Full mailing address, formatted for display or use on a mailing label. This field MAY contain multiple lines, separated by newlines. Newlines can be represented either as a carriage return/line feed pair (\"\\r\\n\") or as a single line feed character (\"\\n\")."
        },
        "street_address": {
          "type": "string",
          "description": "Full street address, which MAY include house number, street name, Post Office Box, and multi-line extended street address information. This field MAY contain multiple lines, separated by newlines. Newlines can be represented either as a carriage return/line feed pair (\"\\r\\n\") or as a single line feed character (\"\\n\")."
        },
        "locality": {
          "type": "string",
          "description": "City or locality"
        },
        "region": {
          "type": "string",
          "description": "State, province, prefecture, or region."
        },
        "postal_code": {
          "type": "string",
          "description": "Zip code or postal code."
        },
        "country": {
          "type": "string",
          "description": "Country name. Format iso3166-1 alpha-2"
        }
      },
      "example": {
        "formatted": "Evergreen Terrace Street, N33, 2nd-B\r\n47022 Valladolid (Valladolid)\r\nES",
        "street_address": "Evergreen Terrace Street, N33, 2nd - B",
        "locality": "Valladolid",
        "region": "Valladolid",
        "postal_code": "47022",
        "country": "ES"
      }
    }
  }
