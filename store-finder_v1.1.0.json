  "definitions": {
    "Store": {
      "type": "object",
      "description": "Store model",
      "required": [
        "store_id",
        "name",
        "address"
      ],
      "properties": {
        "store_id": {
          "type": "string",
          "description": "Store Identifier"
        },
        "name": {
          "type": "string",
          "description": "Name of the store in printable format."
        },
        "link": {
          "type": "string",
          "description": "Public URL for the store"
        },
        "address": {
          "description": "Postal address of the store",
          "$ref": "#/definitions/PostalAddress"
        },
        "phone_number": {
          "type": "string",
          "description": "Phone number for the store. E164 with + format."
        },
        "distance": {
          "type": "number",
          "description": "Euclidean distance from current user location to the venue.\nUnit is km.\n",
          "format": "float",
          "multipleOf": 0.01
        },
        "availability": {
          "description": "Store open and close hours for regular and special days",
          "$ref": "#/definitions/StoreAvailability"
        },
        "coordinates": {
          "description": "Store location coordinates",
          "$ref": "#/definitions/Coordinates"
        },
        "appointment_provider": {
          "type": "string",
          "description": "Identifier for the appointment booking provider"
        }
      },
      "example": {
        "store_id": "fd5582d5-ef7a-4fa8-be84-602793f14497",
